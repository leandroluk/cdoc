{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "useDefineForClassFields": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "resolveJsonModule": true,
    "paths": {
      "libs/common": [
        "libs/common/src"
      ],
      "libs/common/*": [
        "libs/common/src/*"
      ],
      "libs/database": [
        "libs/database/src"
      ],
      "libs/database/*": [
        "libs/database/src/*"
      ],
      "libs/logger": [
        "libs/logger/src"
      ],
      "libs/logger/*": [
        "libs/logger/src/*"
      ],
      "package.json": [
        "./package.json"
      ]
    }
  },
  "include": [
    "apps",
    "libs"
  ],
  "exclude": [
    "dist"
  ]
}